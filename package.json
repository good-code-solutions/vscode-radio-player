{
    "name": "vscode-radio-player",
    "displayName": "Radio Player",
    "publisher": "good-code-solutions",
    "repository": {
        "type": "git",
        "url": "https://github.com/good-code-solutions/vscode-radio-player.git"
    },
    "description": "Play worldwide radio stations in VS Code",
    "icon": "media/icon.png",
    "version": "1.0.0",
    "license": "MIT",
    "homepage": "https://github.com/good-code-solutions/vscode-radio-player#readme",
    "bugs": {
        "url": "https://github.com/good-code-solutions/vscode-radio-player/issues"
    },
    "keywords": [
        "radio",
        "music",
        "audio",
        "streaming",
        "player",
        "internet radio",
        "background music"
    ],
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "radio-player-sidebar",
                    "title": "Radio Player",
                    "icon": "media/sidebar-icon.svg"
                }
            ]
        },
        "views": {
            "radio-player-sidebar": [
                {
                    "type": "webview",
                    "id": "radioPlayerView",
                    "name": "Radio Player",
                    "visibility": "visible"
                }
            ]
        },
        "commands": [
            {
                "command": "vscode-radio-player.open",
                "title": "Radio Player: Open Controls"
            },
            {
                "command": "vscode-radio-player.play",
                "title": "Radio Player: Play",
                "icon": "$(play)"
            },
            {
                "command": "vscode-radio-player.pause",
                "title": "Radio Player: Pause",
                "icon": "$(debug-pause)"
            },
            {
                "command": "vscode-radio-player.pickStation",
                "title": "Radio Player: Select Station"
            }
        ],
        "configuration": {
            "title": "Radio Player",
            "properties": {
                "radioPlayer.customStations": {
                    "type": "array",
                    "default": [
                        {
                            "name": "SomaFM - Groove Salad",
                            "url": "https://ice6.somafm.com/groovesalad-256-mp3"
                        },
                        {
                            "name": "BBC Radio 1",
                            "url": "http://stream.live.vc.bbcmedia.co.uk/bbc_radio_one"
                        },
                        {
                            "name": "Lofi Hip Hop",
                            "url": "http://stream.zeno.fm/0r0xa792kwzuv"
                        }
                    ],
                    "description": "List of custom radio stations (Name and URL)"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/glob": "^8.1.0",
        "@types/node": "20.2.5",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "typescript": "^5.1.3",
        "@vscode/test-electron": "^2.3.2"
    }
}